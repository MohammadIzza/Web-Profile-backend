# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://postgres:admin@localhost:5432/webprofile?schema=public"

# JWT Configuration
# CRITICAL: Generate a secure random string (min 32 characters) for production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string-minimum-32-characters

# CORS Configuration
# In production, set this to your frontend domain (e.g., https://yourdomain.com)
CORS_ORIGIN=http://localhost:5173
